    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&lt;-"
        android:id="@+id/terribleBack"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="If you are in a terrible condition, then you will probably have some severe symptoms. These symptoms may include nasal congestion, a dry cough, heavy fatigue, weakness, mussel aches, sore throat, nausea, a fever that is greater than or equal to 100°F (37.8°C), and a headache."
